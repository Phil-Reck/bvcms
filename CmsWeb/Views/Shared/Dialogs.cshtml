<div id="ChooseFormat" class="modalPopup" style="display: none; width: 400px; padding: 10px">
    <table>
        <tr>
            <td style="margin: 3px; border: solid thin black" nowrap="nowrap">
                <input type="radio" name="format" value="Individual" checked="checked" title="Addressed to individuals" /> Individual<br />
                <input type="radio" name="format" value="Family" title="Addressed as a family when there are children" /> Family<br />
                <input type="radio" name="format" value="FamilyMembers" title="Includes entire Family as individuals" /> Family Members<br />
                <input type="radio" name="format" value="CouplesBoth" title="Addressed to a couple, if both are in selection" /> Couples (both)<br />
                <input type="radio" name="format" value="CouplesEither" title="Addressed to a couple, if one or both are in selection" /> Couples (either)<br />
                <input type="radio" name="format" value="ParentsOf" title="Addressed to parents or parent" /> Parents Of<br />
                <input type="radio" name="format" value="GroupAddress" title="Addressed to names at address" /> Group By Address<br />
            </td>
            <td>
                <input type="checkbox" id="UseTitle" name="UseTitle" /> Use Titles<br />
                <input type="checkbox" id="SortZip" name="SortZip" /> Sort by Zip<br />
                <input type="checkbox" id="UsePhone" name="UsePhone" /> Include Phone<br />
                <input type="checkbox" id="UseMailFlags" name="UseMailFlags" /> Use Mail Flags<br />
                <br />
                Skip:
                    <input id="SkipNum" name="SkipNum" size="3" value="0" />
            </td>
        </tr>
        <tr>
            <td colspan="2" class="right">
                <input id="cmdOK" type="button" value="OK" />
            </td>
        </tr>
    </table>
</div>
<div id="ExportStartEnd" class="modalDiv dialog" style="display: none">
    <table>
        <tr>
            <th colspan="2">Select a date range</th>
        </tr>
        <tr>
            <th>Start Date</th>
            <td>
                <input id="startdt" type="text" class='datepicker' /></td>
        </tr>
        <tr>
            <th>End Date</th>
            <td>
                <input id="enddt" type="text" class='datepicker' /></td>
        </tr>
        <tr>
            <td class="right" colspan="2">
                <a class="bt" id="ExportStartEndRun" href="#">run </a></td>
        </tr>
    </table>
</div>
<div id="SetExtraValues" class="modalDiv dialog" style="display: none">
    <table>
        <tr>
            <th>Field</th>
            <td>
                <input id="field" type="text" /></td>
        </tr>
        <tr>
            <th>Value</th>
            <td>
                <input id="value" type="text" /></td>
        </tr>
        <tr>
            <td class="right" colspan="2">
                <a class="bt" id="SetExtraValuesRun" href="#">OK </a></td>
        </tr>
    </table>
</div>
<div id="TagAllDialog" class="modalDiv dialog" style="display: none;">
    <form>
        <table style="white-space: nowrap">
            <tr>
                <td>TagName:
                    <input id="tagalltagname" name="tagname" type="text" value="@Util2.CurrentTagName" /><br/>
                    Clear Tag First: @Html.CheckBox("cleartagfirst", false)
                </td>
            </tr>
            <tr><td class="right"><a class="bt" id="TagAllRun" href="#" style="text-align: right">OK </a></td></tr>
        </table>
    </form>
</div>
<div id="AddDialog">
    <iframe id="AddDialogiframe" style="width: 99%; height: 99%; border-width: 0px"></iframe>
</div>
