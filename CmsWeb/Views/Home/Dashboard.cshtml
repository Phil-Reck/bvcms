@model List<CmsData.DashboardWidget>
@{
    ViewBag.Title = "Home";
    Layout = ViewExtensions2.TouchPointLayout();
}
@section head
{
    <style>
        #home {
            padding-top: 10px;
        }

        ul.list-group {
            max-height: 215px;
            overflow-y: auto;
            margin-bottom: 0;
        }

        @@media (max-width: 767px) {
            ul.list-group {
                max-height: none !important;
                overflow-y: visible !important;
            }
        }

        ul.list-group li {
            border-left: none;
            border-right: none;
            padding-left: 20px;
        }

        ul.list-group li.section {
            font-weight: bold;
        }

        ul.list-group li.indent {
            padding-left: 25px;
        }

        .list-group-item > .label {
            float: right;
        }

        .widget-embed.loading {
            opacity: 0.5;
        }
        .widget-embed.loading .box,
        .widget-embed.error .box {
            height: 150px;
            background-color: #fff;
        }
        .widget-embed .box > .center {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100%;
        }
        .widget-embed .box > .center i {
            margin-bottom: 20px;
        }

    </style>
}
<div id="home" class="row">
    @foreach(DashboardWidget widget in Model)
    {
        <div class="col-sm-4 widget-embed" data-url="/HomeWidgets/Embed/@widget.Id.ToString()">
            <div class="box">
                <div class="center">
                    <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
                    <p>Loading...</p>
                </div>
            </div>
        </div>
    }
</div>
@section scripts {
<script>
    $('.widget-embed').each(function () {
        var el = $(this);
        var url = el.data('url');
        el.addClass('loading');
        $.get(url, function (data) {
            if (data.includes('Error:')) {
                el.removeClass('loading').addClass('error');
                el.html("<div class='box'><div class='center'><i class='fa fa-3x fa-exclamation-circle'></i><p>Error loading widget</p></div></div>")
            } else {
                el.html(data);
                el.removeClass('loading');
            }
        });
    })
</script>
}
