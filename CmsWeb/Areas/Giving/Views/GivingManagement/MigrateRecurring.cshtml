@using UtilityExtensions
@model CmsWeb.Areas.Giving.Models.MigrateGivingModel
@{
    Layout = ViewExtensions2.TouchPointLayout();
    ViewBag.Title =
    ViewBag.PageHeader = "Migrate to Scheduled Giving";
    var records = Model.Count == 1 ? "record" : "records";
    var error = Util.TempError;
    var success = Util.TempSuccessMessage;
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @if (error.HasValue())
        {
            <div class="alert alert-danger">
                @error
            </div>
        }
        @if (success.HasValue())
        {
            <div class="alert alert-success">
                @success
            </div>
        }
        @if (Model.Count > 0)
        {
            <div class="alert alert-danger">
                You are about to migrate @Model.Count recurring giving @records from the legacy format to the new format.
            </div>
            <div class="panel panel-default panel-body">
                <p class="panel-group">
                    Before you proceed, you should understand the changes that are about to be made.  There is no way to revert this change.
                    Read more about this process <a href="https://docs.touchpointsoftware.com/Finance/OnlineGiving.html" target="_blank">here in the TouchPoint documentation</a>.
                </p>
                <div class="well text-center">
                    <p class="panel-group">Are you sure you want to continue?</p>
                    <div class="row">
                        <div class="col-xs-6">
                            <a class="btn btn-default btn-block" href="/Giving/">No, I'm not ready</a>
                        </div>
                        <div class="col-xs-6">
                            @using (Html.BeginForm("MigrateRecurringConfirm", "GivingManagement", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <button class="btn btn-primary btn-block">Yes, continue with the migration</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                There are no recurring giving records to migrate.
            </div>
            <p>
                <a href="/Giving" class="btn btn-default">Return to Giving Management</a>
            </p>
        }
    </div>
</div>
