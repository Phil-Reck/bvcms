    <div class="row">
        <div class="btn-group">
            <div class="form-group">
                <a href="Inv/Delete" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                <a href="Inv/Tag" class="btn btn-sm btn-danger"><i class="fa fa-tag"></i></a>
                <a href="Inv/Edit" class="btn btn-sm btn-danger"><i class="fa fa-edit"></i></a>
