@{
    Layout = ViewExtensions2.TouchPointLayout();
    ViewBag.Title = "Check-In Setup";
    ViewBag.PageHeader = "Check-In Setup";
}
@section head
{
    <style>
        #checkinSetup .number-input--inline > input {
            display: inline-block;
            width: inherit;
        }

        #checkinSetup .number-input__input {
            font-size: 1.3rem;
            border: 0;
            padding: unset;
            text-align: center;
        }
    </style>
}
<checkin-setup></checkin-setup>
@section scripts
{
    @Fingerprint.Script("/Content/touchpoint/lib/jquery-mask/js/jquery-mask.min.js")
    <script>
        $(function () {
            $('.logoutCode, .adminCode').mask("00000", { placeholder: "00000", clearIfNotMatch: true });
        });
    </script>
}
