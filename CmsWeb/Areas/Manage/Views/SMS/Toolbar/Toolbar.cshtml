<div class="SMS-toolbar">
    <div id="bluebar-menu" class="btn-group pull-right add-margin-right">
        <div class="btn-group btn-group-lg dropdown-large SMS-div-btn">
            <button type="button" class="btn btn-primary dropdown-toggle SMS-left-btn" data-toggle="dropdown">
                <span class="fa fa-envelope-o"></span>
            </button>
            @Html.Partial("Toolbar/Email")
        </div>
        <div class="btn-group btn-group-lg dropdown-large SMS-div-btn">
            <button type="button" class="btn btn-primary dropdown-toggle SMS-btn" data-toggle="dropdown">
                <span class="fa fa-cloud-download"></span>
            </button>
            @Html.Partial("Toolbar/Reports")
        </div>
        <div class="btn-group btn-group-lg dropdown-large SMS-div-btn">
            <button type="button" class="btn btn-primary dropdown-toggle SMS-right-btn" data-toggle="dropdown">
                <span class="fa fa-cog"></span>
            </button>
            @Html.Partial("Toolbar/Gear")
        </div>
    </div>
</div>
